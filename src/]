#version 400

layout(location=0) in vec3 aPos;
layout(location=1) in vec2 inTexPos;

out vec2 texPos;

uniform int flip;
uniform vec3 worldPos;
uniform vec3 objectScale;

void main () {
    vec3 renderPos;
    renderPos = aPos * objectScale;
    renderPos = renderPos + worldPos;
    gl_Position = vec4(renderPos, 1.0);
    texPos = inTexPos;
}
